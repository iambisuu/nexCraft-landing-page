        <img src="/hero-nexcraft.png" alt="NEXCRAFT" class="w-full max-w-xs sm:max-w-md" />
      </div>
      
      <!-- Original layout for desktop -->
      <div class="mt-12 hidden md:block md:w-[60rem] relative">
        <img src="/hero-nexcraft.png" alt="NEXCRAFT" class="w-full" />
      </div>
    </div>
    
    <!-- Bottom Buttons -->
    <!-- Mobile-friendly layout for small screens -->
