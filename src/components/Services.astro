<!-- Main content with background -->
<div class="w-full bg-[url('/main-bg-1.png')] py-20">
  <!-- Services grid -->
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-20">
      {services.map((service) => (
        <div class="relative p-6 rounded-[2rem] border-2 border-orange-500" style="border-radius: 2rem 2rem 2rem 2rem;">
          <div class="absolute -top-6 left-1/2 transform -translate-x-1/2 bg-white p-2 rounded-lg border-2 border-blue-600">
            <img 
              src={`/icons/${service.icon}.png`} 
              alt={service.title} 
              class="w-8 h-8 text-blue-600"
            />
          </div>
          <h3 class="text-xl font-bold text-orange-500 mt-4 text-center">{service.title}</h3>
          <p class="mt-2 text-gray-600 italic text-center font-mono">{service.description}</p>
        </div>
      ))}
    </div>
  </div>
</div>

