<!-- Tilted strips container -->
<div class="relative w-full h-24 overflow-visible">
  <!-- Grey strip - adjusted to show full width -->
  <div class="absolute w-[120%] left-[-10%] transform -rotate-6" style="top: -24px;">
    <img src="/grey-strip.png" alt="Grey Strip" class="w-full h-24 object-cover" />
  </div>
  <!-- Orange/new strip -->
  <div class="absolute w-full transform rotate-6" style="top: -24px;">
    <img src="/new-strip.png" alt="Orange Strip" class="w-full h-24 object-cover" />
