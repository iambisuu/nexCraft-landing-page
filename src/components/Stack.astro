---
// Stack.astro
---

<div class="relative w-full min-h-screen overflow-hidden">
    <!-- Background images -->
    <div class="absolute inset-0 flex justify-between items-stretch">
      <img src="/bg-left.png" alt="Left Background" class="h-3/4 w-auto mt-20 object-cover object-left" />
      <img src="/bg-right.png" alt="Right Background" class="h- w-auto mt-12 object-cover object-right" />
    </div>
    
    <!-- Content overlay -->
    <div class="absolute inset-0 flex flex-col items-center justify-center p-4">
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-center mb-10 md:mb-16">Our Stack</h1>
      
      <!-- Top row -->
      <div class="w-full max-w-6xl grid grid-cols-2 md:grid-cols-4 gap-6 md:gap-8 mb-8 md:mb-12">
        <div class="bg-white rounded-lg shadow-md p-6 md:p-8 flex flex-col items-center justify-center border-4 border-gray-200">
          <img src="/stack/1.png" alt="Figma" class="h-12 md:h-16 w-auto mb-4 md:mb-6" />
          <p class="text-xl md:text-2xl font-bold">Figma</p>
        </div>
        <div class="bg-white rounded-lg shadow-md p-6 md:p-8 flex flex-col items-center justify-center border-4 border-gray-200">
