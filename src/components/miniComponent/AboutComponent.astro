---
// ConceptDiscovery.astro
interface Props {
  number: string;
  conceptText: string;
  discoveryImage: {
    src: string;
    alt: string;
    width?: number;
    height?: number;
  };
  heading: string;
  description: string;
}

const { 
  number = "01",
  conceptText = "CONCEPT",
  discoveryImage,
  heading = "Heading",
  description = "At nexCraft, we craft vibrant and innovative digital products tailored to your needs so that no one has to settle for the same old"
} = Astro.props;
---

<div class="pt-6 sm:pt-8 border-t border-gray-200 max-sm:px-4">
  <div class="flex flex-col md:flex-row items-start gap-4 font-sans w-full pb-10 sm:pb-16 md:pb-20">
    {/* Number */}
    <div class="text-lg sm:text-xl text-gray-800 font-medium w-full md:w-[5%] mb-2 md:mb-0">
      {number}.
    </div>

    {/* Concept Text and Discovery Image */}
    <div class="relative w-full md:w-[50%] px-2 sm:px-4 mb-8 md:mb-0">
      <div class="text-5xl sm:text-6xl md:text-7xl lg:text-[8rem] font-black leading-none tracking-tight">
        {conceptText}
      </div>
      <div class="relative md:absolute mt-4 md:mt-0 md:-bottom-20 md:left-20 w-full sm:w-[80%] md:w-[60%]">
        <img 
          src={discoveryImage.src}
          alt={discoveryImage.alt}
          width={discoveryImage.width}
          height={discoveryImage.height}
          class="w-auto h-auto max-w-full"
        />
      </div>
    </div>

    {/* Text Content */}
    <div class="w-full md:w-[45%] pt-0 md:pt-8">
      <h2 class="text-xl sm:text-2xl font-semibold mb-2">
        {heading}
      </h2>
      <p class="text-sm sm:text-base leading-relaxed text-gray-600 italic">
        {description}
      </p>
    </div>
  </div>
</div>