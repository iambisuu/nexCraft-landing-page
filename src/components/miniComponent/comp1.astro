---
interface Props {
  number: string;
  conceptText: string;
  conceptSize?: string; // Accepts values like "80vh", "100px", etc.
  accentText?: string;
  accentTextSize?: string; // Accepts values like "40vh", "50px", etc.
  heading: string;
  description: string;
}

const { 
  number = "01",
  conceptText = "CONCEPT",
  conceptSize = "100vh", // Default desktop size
  accentText = "Discovery",
  accentTextSize = "50vh", // Default accent text size
  heading = "Heading",
  description = "At nexCraft, we craft vibrant and innovative digital products tailored to your needs so that no one has to settle for the same old"
} = Astro.props;
---

<div class="pt-6 sm:pt-8 border-t border-gray-200 max-sm:px-4">
  <div class="flex flex-col md:flex-row items-start gap-4 font-sans w-full pb-10 sm:pb-16 md:pb-20">
    
    <!-- Number -->
    <div class="text-lg sm:text-xl text-gray-800 font-medium w-full md:w-[5%] mb-2 md:mb-0">
      {number}.
    </div>

    <!-- Concept Text and Accent Text -->
    <div class="relative w-full md:w-[50%] px-2 sm:px-4 mb-8 md:mb-0">
      <div 
        class="font-black leading-none tracking-tight concept-text"
        style={`font-size: ${conceptSize};`} 
      >
        {conceptText}
      </div>
      <div class="relative md:absolute mt-4 md:mt-0 md:-bottom-20 md:left-20 w-full sm:w-[80%] md:w-[60%]">
        <p 
          class="font-cursive text-[#FC6403] accent-text"
          style={`font-size: ${accentTextSize};`}
        >
          {accentText}
        </p>
      </div>
    </div>

    <!-- Text Content -->
    <div class="w-full md:w-[45%] pt-0 md:pt-8">
      <h2 class="text-xl sm:text-2xl font-semibold mb-2">
        {heading}
      </h2>
      <p class="text-sm sm:text-base leading-relaxed text-gray-600 ">
        {description}
      </p>
    </div>
  </div>
</div>

<style>
  .font-cursive {
    font-family: 'Brush Script MT', cursive, serif;
  }

  /* Mobile Fallback Size */
  @media (max-width: 768px) {
    .concept-text {
      font-size: 7vh !important; /* Adjust for smaller screens */
    }
    .accent-text {
      font-size: 6vh !important; /* Adjust accent text for small screens */
    }
  }
</style>
